<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hotel Admin</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <style>
        body, .navbar, .container, .card, .footer, .bg-body-secondary, .bg-body-tertiary {
            transition: background-color 0.4s ease, color 0.4s ease;
        }

        [data-bs-theme="dark"] {
            --bs-body-bg: #121212;
            --bs-body-color: #e0e0e0;
            --bs-body-secondary-bg: #1f1f1f;
            --bs-body-secondary-color: #bbbbbb;
            --bs-body-tertiary-bg: #2a2a2a;
        }

        #toggleTheme {
            transition: all 0.3s ease;
        }

        .navbar-futuristic {
            background: linear-gradient(90deg, #0f2027, #203a43, #2c5364);
            box-shadow: 0 0 15px rgba(0, 255, 255, 0.2);
        }

        .navbar-nav .nav-link {
            font-size: 1.15rem;
            font-weight: 500;
            letter-spacing: 0.5px;
            position: relative;
            color: #ccc;
            transition: color 0.3s ease;
        }

            .navbar-nav .nav-link::after {
                content: "";
                position: absolute;
                width: 0;
                height: 2px;
                bottom: 0;
                left: 0;
                background-color: cyan;
                transition: width 0.3s ease;
            }

            .navbar-nav .nav-link:hover::after {
                width: 100%;
            }

            .navbar-nav .nav-link:hover {
                color: #00ffff;
            }
    </style>
</head>
<body data-bs-theme="light">
    <nav class="navbar fixed-top navbar-expand-sm navbar-dark navbar-futuristic">
        <div class="container">
            <a class="navbar-brand" href="/">Hotel Admin</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item"><a class="nav-link" href="/Dashboard">Dashboard</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Bookings">Rezervari</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Rooms">Camere</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Guests">Oaspeti</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Staff">Personal</a></li>
                </ul>
                <button id="toggleTheme" class="btn btn-outline-light btn-sm">🌙 Dark Mode</button>
            </div>
        </div>
    </nav>

    <main class="container">
        <div class="p-4 mb-4 bg-body-tertiary rounded-3">
            <h1 class="display-6">@ViewData["Title"]</h1>
        </div>
        @RenderBody()
    </main>

    <footer class="footer mt-auto py-3 border-top bg-body-secondary">
        <div class="container text-center">
            <span class="text-body-secondary">&copy; 2025 Hotel Admin Demo</span>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const toggleThemeBtn = document.getElementById('toggleTheme');
        const body = document.body;

        // Load saved theme preference
        const savedTheme = localStorage.getItem('theme');
        if (savedTheme) {
            body.setAttribute('data-bs-theme', savedTheme);
            toggleThemeBtn.innerText = savedTheme === 'light' ? '🌙 Dark Mode' : '☀️ Light Mode';
        }

        toggleThemeBtn.addEventListener('click', () => {
            const currentTheme = body.getAttribute('data-bs-theme');
            const newTheme = currentTheme === 'light' ? 'dark' : 'light';
            body.setAttribute('data-bs-theme', newTheme);
            toggleThemeBtn.innerText = newTheme === 'light' ? '🌙 Dark Mode' : '☀️ Light Mode';
            localStorage.setItem('theme', newTheme);
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>